#!/bin/bash
# ------------------------------------------------------------------------------
CEN_LEGAL="Copyright Dr. J. Pfennig (c) 2018-2023; BSD License"
CEN_TITLE="A Hello World Example"

MINIMAL="${MINIMAL:-false}" ####################################################
if $MINIMAL ; then #############################################################
PATH+=":${0%/*}" . _centauri_bash_lib -a -d - '0.00:2' 0 + || exit 2
else ###########################################################################
# TODO: This demo enables autoload, dryrun, gui and localization,
# arg 3 and 4 set the minimum/maximum argument count for main():

PATH+=":${0%/*}" . _centauri_bash_lib -a -d -g -t - '0.00:2' 0 + || exit 2
fi #############################################################################

# ------------------------------------------------------------------------------
# The one and only action
# ------------------------------------------------------------------------------
run() {
if $MINIMAL ; then #############################################################
    message "Hello World"
else ###########################################################################
    message -d 2 "Hello World"
fi #############################################################################
}

# ------------------------------------------------------------------------------
# Finally call the library to execute the script
# ------------------------------------------------------------------------------
main "$@" ; quit

# the end
